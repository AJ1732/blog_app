<section class="container w-75 pb-5 m-auto">
  <form action="/submit" method="post" class="row | flex-column gap-2 justify-content-start align-items-start">
    <div class="w-100 | row | flex flex-row d-lg-flex justify-content-between align-items-center">
      <h2 for="blog_post_input" class="form-label | col-9 | fw-bold">Enter Blog Post</h2>
      <button type="submit" class="w-100px | btn btn-primary | col-3">Post</button>
    </div>
      
    <div class="col-12">
      <input type="text" class="form-control" id="blog_post_input" name="blog_post_input">
      <input type="text" class="form-control h" id="blog_post_input" name="blog_post_input">
      <input type="date" class="form-control" id="blog_post_input" name="blog_post_input">
    </div>
  </form>
</section>

<section class="w-75 m-auto | card text-center">
  <% if (locals.post) { %>
    <h4 class="card-header">
      <%= post %>
    </h4>
    <article class="card-body">
      <h5 class="card-title">Special title treatment</h5>
      <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
      <a href="#" class="btn btn-primary">Go somewhere</a>
    </article>
    <div class="card-footer text-muted">
      2 days ago
    </div>
  <% } else { %>
    <h1>No Posts</h1>
  <% } %>
</section>